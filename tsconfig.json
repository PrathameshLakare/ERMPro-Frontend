{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",               // ✅ Add this
    "esModuleInterop": true,                  // ✅ Add this
    "allowSyntheticDefaultImports": true,     // ✅ Add this
    "resolveJsonModule": true,                // ✅ Add this
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts"],        // ✅ Ensure these are included
  "exclude": ["node_modules"]
}
